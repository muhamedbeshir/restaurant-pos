{
  "name": "restaurant-pos",
  "version": "1.0.0",
  "description": "Premium Restaurant POS System",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "dev": "webpack --mode development && electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "restaurant",
    "pos",
    "management"
  ],
  "author": "Muhamed Beshir",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.3",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.4",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "electron": "^34.0.0",
    "mysql2": "^3.16.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "build": {
    "appId": "com.restaurant.pos",
    "productName": "Restaurant POS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "public/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
